# Device configuration
MODEL_DEVICE=cpu  # Set to 'gpu' to use CUDA if available
TORCH_THREADS=4

# Document processing limits
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes for development
MAX_PAGES=2000  # Higher limit for development
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CONTEXT_WINDOW=4096
MAX_RETRIES=3

# Server configuration
BACKEND_PORT=8000
FRONTEND_PORT=5173  # Vite dev server port

# Development settings
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:8000/api  # Direct connection to backend in dev
DEBUG=1
LOG_LEVEL=DEBUG

# Hot reload settings
VITE_HMR=true
WATCHFILES_FORCE_POLLING=true  # For Docker environments