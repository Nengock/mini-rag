# Copy this file to .env and adjust values as needed

# Device configuration
MODEL_DEVICE=cpu  # Set to 'gpu' to use CUDA if available
TORCH_THREADS=4

# Document processing limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_PAGES=1000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CONTEXT_WINDOW=4096
MAX_RETRIES=3

# Server configuration
BACKEND_PORT=8000
FRONTEND_PORT=80

# Production settings
NODE_ENV=production
VITE_API_BASE_URL=/api

# Security settings
API_KEY=  # Set this to enable API key authentication
RATE_LIMIT=60  # Requests per minute per IP/path
ALLOWED_HOSTS=localhost,127.0.0.1  # Comma-separated list of allowed hosts
CORS_ORIGINS=http://localhost,http://localhost:80  # Comma-separated list of allowed CORS origins

# Optional: Set to enable detailed logging
# DEBUG=1
# LOG_LEVEL=DEBUG

# Optional: Configure GPU settings if using CUDA
# CUDA_VISIBLE_DEVICES=0
# CUDA_LAUNCH_BLOCKING=1